<odoo>
    <record id="res_config_settings_view_form_inherit_apilayer" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.inherit.apilayer</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//form" position="inside">
          <sheet>
            <group string="API Layer Settings">
              <field name="apilayer_api_key"/>
            </group>
          </sheet>
        </xpath>
      </field>
    </record>
  </odoo>
  